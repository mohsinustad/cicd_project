pipeline {
  agent any

  // Trigger a build on each push to GitHub (requires GitHub plugin + webhook)
  triggers {
    githubPush()
  }

  environment {
    // Your repo URL
    REPO_URL = 'https://github.com/mohsinustad/cicd_project.git'
    // The branch you want to build
    BRANCH   = 'main'
  }

  stages {
    stage('Checkout') {
      steps {
        // Pull the latest code
        git url: env.REPO_URL, branch: env.BRANCH
      }
    }

    stage('Install Dependencies') {
      steps {
        // Install your Node.js dependencies
        sh 'npm install'
      }
    }

    stage('Run Tests') {
      steps {
        // Run your test suite
        sh 'npm test'
      }
      post {
        always {
          // Publish test results (if you‚Äôre outputting JUnit‚Äëstyle XML)
          junit '**/test-results/*.xml'
        }
      }
    }

    stage('Build') {
      steps {
        // Build your app (e.g. bundle, compile, etc.)
        sh 'npm run build'
      }
      post {
        success {
          // Archive the build artifacts
          archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
        }
      }
    }

    stage('Deploy (Placeholder)') {
      when {
        branch 'main'
      }
      steps {
        echo 'üéâ Deploying to production‚Ä¶'
        // e.g. sh './deploy.sh' or a scp/ssh step
      }
    }
  }

  post {
    success {
      echo "‚úÖ Pipeline completed successfully!"
    }
    failure {
      echo "‚ùå Pipeline failed. Check the logs above."
    }
  }
}
